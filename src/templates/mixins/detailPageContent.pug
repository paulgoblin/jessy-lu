    | #{siteData.main.title} | #{siteData.pieces[pieceName].title}

mixin detailPageContent(siteDate, pieceName)
    - var piece = siteData.pieces[pieceName]
    section.overlay
        +closeButton()
        .overlay-content
            each imageName in piece.images
                - var image = siteData.images[imageName]
                +detailImage(image)

